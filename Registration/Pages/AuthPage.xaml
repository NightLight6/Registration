<Page x:Class="Registration.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Авторизация"
      Background="White">
    <Grid Height="441">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="300">
            <TextBlock Text="Логин:" />
            <TextBox x:Name="tbLogin" />

            <TextBlock Text="Пароль:" />
            <PasswordBox x:Name="tbPassword" />

            <TextBlock x:Name="tblCaptcha" Text="Капча" Visibility="Collapsed" />
            <TextBox x:Name="tbCaptcha" Visibility="Collapsed" />

            <StackPanel x:Name="spBlockTimerContainer" Orientation="Vertical" Height="30" VerticalAlignment="Top">
                <TextBlock x:Name="tbBlockTimer" Text="" Visibility="Collapsed" Foreground="Red" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="80" HorizontalAlignment="Center">
                <Button x:Name="btnEnterGuest" Content="Войти как гость" Click="btnEnterGuest_Click" />
                <Button x:Name="btnEnter" Content="Войти" Click="btnEnter_Click" />
            </StackPanel>

            <Button Content="Нет аккаунта?" 
                    Click="BtnGoToRegister_Click"
                    Margin="0,10,0,0" Width="161"/>
        </StackPanel>
    </Grid>
</Page>