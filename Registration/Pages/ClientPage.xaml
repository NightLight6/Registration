<Page x:Class="Registration.Pages.ClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Клиент"
      Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1"
               Text="Добро пожаловать, уважаемый клиент!"
               FontSize="24"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>

        <Border Grid.Row="2" Padding="10" HorizontalAlignment="Right">
            <Button Content="Выйти"
                Width="80"
                Height="30"
                Background="Purple"
                Foreground="White"
                Click="LogoutButton_Click"/>
        </Border>
    </Grid>
</Page>