<Page x:Class="Registration.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация нового пользователя"
      Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Width="300">
            <TextBlock Text="Регистрация нового пользователя" 
                       FontSize="18" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <TextBlock Text="Фамилия:" />
            <TextBox x:Name="txtSurname" />

            <TextBlock Text="Имя:" />
            <TextBox x:Name="txtName" />

            <TextBlock Text="Отчество:" />
            <TextBox x:Name="txtOtchestvo" />

            <TextBlock Text="Логин:" />
            <TextBox x:Name="txtLogin" />

            <TextBlock Text="Пароль:" />
            <PasswordBox x:Name="txtPassword" />

            <TextBlock Text="Роль:" />
            <ComboBox x:Name="cmbRole" 
                      DisplayMemberPath="RoleName" 
                      SelectedValuePath="RoleID"
                      SelectionChanged="CmbRole_SelectionChanged"/>
            <Button Content="Зарегистрировать" 
                    Click="BtnRegister_Click" Width="179" 
                    />
            <Button Content="Уже есть аккаунт? Войти" 
                    Click="BtnGoToLogin_Click"
                    Margin="0,10,0,0" Width="183"/>

            <TextBlock x:Name="lblMessage" 
                       TextWrapping="Wrap" 
                       TextAlignment="Center" 
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>